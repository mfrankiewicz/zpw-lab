Options +FollowSymLinks -MultiViews -Indexes

RewriteEngine On
RewriteBase /

RewriteCond %{HTTP_HOST} ^www\.(.*)\.loc$
RewriteRule ^(.*)$ http://%1.loc/$1 [L]

RewriteCond %{REQUEST_URI} !^/global
RewriteCond %{HTTP_HOST} ^zpw\.loc
RewriteCond $1 !^main
RewriteRule ^(.*)$ /main/$1 [L]

RewriteCond %{REQUEST_URI} !^/global
RewriteCond %{HTTP_HOST} (.*)\.zpw\.loc
RewriteCond $1 !^lab
RewriteRule ^(.*)$ /%1/$1 [L]
